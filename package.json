{
    "name": "node-typescript-graphql-starter-kit",
    "version": "1.0.0",
    "main": "./src/api/server.ts",
    "keywords": [
        "Apollo Server",
        "Node.js",
        "TypeScript",
        "GraphQL",
        "API",
        "Starter Kit",
        "Boilerplate",
        "Web Development",
        "Server",
        "Backend",
        "JavaScript",
        "Express",
        "Template",
        "Microservices",
        "REST",
        "GraphQL API",
        "NoSQL",
        "Asynchronous",
        "Fullstack",
        "Development Tools",
        "Open Source"
    ],
    "author": "jefferyvincent",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "clean": "rimraf ./dist/*",
        "build": "npm run clean && rollup -c",
        "server": "nodemon server.ts",
        "start": "node dist/bundle.js",
        "dev": "nodemon --exec tsx src/api/server.ts",
        "eslint:lint": "./node_modules/.bin/eslint src --fix",
        "test": "jest --runInBand --coverage --forceExit",
        "precommit": "lint-staged --debug",
        "compile:continuous": "babel src --out-dir .compiled --source-maps --watch",
        "compile": "babel src --out-dir .compiled --source-maps",
        "crumb": "codecrumbs -d ./.compiled  -e ./.compiled/server.js",
        "codecrumbs": "npm run compile && npm run crumb",
        "generate-schema": "graphql-codegen --config codegen.yml"
    },
    "dependencies": {
        "@babel/cli": "^7.24.8",
        "@babel/core": "^7.24.9",
        "@babel/preset-env": "^7.24.8",
        "@graphql-tools/load-files": "^7.0.0",
        "@graphql-tools/schema": "^10.0.4",
        "@types/jest": "^29.5.12",
        "@types/lodash": "^4.17.7",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.2.3",
        "@types/nodemailer": "^6.4.15",
        "@types/uniqid": "^5.3.4",
        "@types/validator": "^13.12.0",
        "apollo-server-express": "^3.12.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^5.0.2",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.19.2",
        "graphql": "^16.6.0",
        "graphql-subscriptions": "^2.0.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "mongoose": "^7.2.1",
        "morgan": "^1.10.0",
        "nodemon": "^3.1.4",
        "npm": "^10.8.2",
        "prettier": "^3.3.3",
        "subscriptions-transport-ws": "^0.11.0",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.3",
        "typescript": "^5.5.4"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.2",
        "@graphql-codegen/introspection": "^4.0.3",
        "@graphql-tools/merge": "^9.0.4",
        "@rollup/plugin-json": "^6.1.0",
        "@types/supertest": "^6.0.2",
        "depcheck": "^1.4.7",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-babel-module": "^5.3.2",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-module-resolver": "^1.5.0",
        "eslint-plugin-prettier": "^5.2.1",
        "lodash": "^4.17.21",
        "rollup": "^2.0.0",
        "rollup-plugin-babel": "^4.3.3",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.36.0",
        "tsx": "^4.16.2"
    }
}
