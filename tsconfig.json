{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "module": "ES2022", // or ES2020 if you don't care about ESM (recommended)
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "."
    },
    "include": ["src/**/*.ts", "schema.d.ts"],
    "exclude": ["node_modules", "./src/api/**/**/*.graphql", "*./yml"]
}
